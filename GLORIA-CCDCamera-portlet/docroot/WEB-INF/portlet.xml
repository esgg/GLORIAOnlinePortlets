<?xml version="1.0"?>

<portlet-app
	version="2.0"
	xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd"
>
	<portlet>
		<portlet-name>GLORIA-CCDCamera</portlet-name>
		<display-name>GLORIA CCDCamera</display-name>
		<portlet-class>eu.gloria.website.liferay.portlets.experiment.online.CCDControl</portlet-class>
		<init-param>
			<name>view-jsp</name>
			<value>/jsp/webcamera/view.jsp</value>
		</init-param>
		<init-param>
			<name>edit-jsp</name>
			<value>/jsp/webcamera/edit.jsp</value>
		</init-param>
		<init-param>
			<name>error-jsp</name>
			<value>/jsp/webcamera/error.jsp</value>
		</init-param>
		<init-param>
			<name>popup-jsp</name>
			<value>/jsp/webcamera/viewMode/popup.jsp</value>
		</init-param>
		<init-param>
            <name>error-image-url</name>
            <value>/GLORIA-CCDCamera-portlet/images/not_available.png</value>
        </init-param>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>edit</portlet-mode>
			<portlet-mode>view</portlet-mode>
		</supports>
		<resource-bundle>content.ccd.Language</resource-bundle>
		<portlet-info>
			<title>GLORIA CCDCamera</title>
			<short-title>GLORIA CCDCamera</short-title>
			<keywords>GLORIA CCDCamera</keywords>
		</portlet-info>
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
	</portlet>
</portlet-app>